Subject: [PATCH 2/3] add blogsearch configuration

---
 jekyll/_config.yml | 28 +++++++++++++++++++++++++++-
 1 file changed, 27 insertions(+), 1 deletion(-)
 mode change 100644 => 100755 jekyll/_config.yml

diff --git a/jekyll/_config.yml b/jekyll/_config.yml
old mode 100644
new mode 100755
index fef6cd39d..4fca3e2fd
--- a/jekyll/_config.yml
+++ b/jekyll/_config.yml
@@ -14,6 +14,7 @@ plugins:
   - jekyll-sitemap
   - jekyll-asciidoc
   - jekyll-target-blank
+  - jekyll-blogsearch
 
 algolia:
   application_id: U0RXNGRK45
@@ -141,4 +142,29 @@ analytics:
     go_button_clicked: go-button-clicked
 rollbar_env: development
 
-# server_version: "2.18.4"
+blogsearch:
+  output: _site/circleci-docs.jekyll-example.db.wasm
+  fields:
+    title:
+      enabled: true
+      indexed: true
+      hasContent: true
+    body:
+      enabled: true
+      indexed: true
+      hasContent: true
+    url:
+      base: https://circleci.com/docs
+      enabled: true
+      indexed: false
+      hasContent: true
+    categories:
+      enabled: true
+      indexed: true
+      hasContent: true
+    tags:
+      enabled: false
+      indexed: false
+      hasContent: false
+
+# server_version: "2.18.4"
\ No newline at end of file
